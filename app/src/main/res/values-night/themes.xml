<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- MAINACTIVITY THEME -->
    <style name="Theme.PdfLabelPrinting" parent="Base.Theme.PdfLabelPrinting" />

    <!-- PDFVIEWER THEME -->
    <style name="Theme.PdfLabelPrinting.PdfViewer" parent="Base.Theme.PdfLabelPrinting">
        <item name="android:colorBackground">@color/pdf_viewer_sb_bg_color</item>
        <item name="android:statusBarColor">@color/pdf_viewer_sb_bg_color</item>

        <item name="toolbarStyle">@style/Widget.PdfLabelPrinting.Toolbar.PdfViewer</item>
    </style>

    <!-- TOOLBAR PDF VIEWER -->
    <style name="Widget.PdfLabelPrinting.Toolbar.PdfViewer" parent="Widget.PdfLabelPrinting.Toolbar">
        <item name="android:backgroundTint">@color/pdf_viewer_sb_bg_color</item>
    </style>

    <!-- BASE THEME -->
    <style name="Base.Theme.PdfLabelPrinting" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:colorBackground">@color/app_background_color</item>
        <item name="actionBarSize">@dimen/dp_56</item>
        <item name="colorControlNormal">@color/app_control_normal_color</item>
        <item name="colorControlActivated">@color/app_control_activated_other_color</item>
        <item name="android:textColorHighlight">@color/app_control_activated_bg_color</item>
        <item name="android:statusBarColor">@color/app_background_color</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="fontFamily">@font/roboto</item>
        <item name="android:fontFamily">@font/roboto</item>

        <item name="appBarLayoutStyle">@style/Widget.PdfLabelPrinting.AppBar</item>
        <item name="toolbarStyle">@style/Widget.PdfLabelPrinting.Toolbar</item>
        <item name="actionOverflowButtonStyle">@style/PdfLabelPrintingOverflowButton</item>
        <item name="actionOverflowMenuStyle">@style/PdfLabelPrintingOverflowMenu</item>
        <item name="materialButtonStyle">@style/Widget.PdfLabelPrinting.Button</item>
        <item name="android:textViewStyle">@style/Widget.PdfLabelPrinting.TextView</item>
        <item name="editTextStyle">@style/Widget.PdfLabelPrinting.EditText</item>
        <item name="radioButtonStyle">@style/Widget.PdfLabelPrinting.RadioButton</item>
        <item name="switchStyle">@style/Widget.PdfLabelPrinting.Switch.M2</item>
        <item name="floatingActionButtonStyle">@style/Widget.PdfLabelPrinting.Fab</item>
        <item name="textAppearanceListItem">@style/TextAppearance.PdfLabelPrinting.ListItem</item>
        <item name="textAppearanceListItemSecondary">@style/TextAppearance.PdfLabelPrinting.ListItemSecondary</item>
        <item name="circularProgressIndicatorStyle">@style/Widget.PdfLabelPrinting.CircularProgress</item>
        <item name="linearProgressIndicatorStyle">@style/Widget.PdfLabelPrinting.LinearProgress</item>
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.PdfLabelPrinting.AlertDialog</item>
        <item name="checkboxStyle">@style/Widget.PdfLabelPrinting.CheckBox</item>
    </style>

    <!-- APPBAR -->
    <style name="Widget.PdfLabelPrinting.AppBar" parent="Widget.Material3.AppBarLayout">
        <item name="android:windowElevation">@dimen/dp_0</item>
        <item name="elevation">@dimen/dp_0</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="liftOnScroll">false</item>
    </style>

    <!-- TOOLBAR -->
    <!-- overflow menu (text size) -->
    <style name="TextAppearance.PdfLabelPrinting.PopupMenuItem" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textSize">@dimen/dp_14</item>
    </style>

    <!-- overflow menu (text color) -->
    <style name="Widget.PdfLabelPrinting.PopupMenu.TextView" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/menu_text_color</item>
    </style>

    <!-- overflow menu (text size settings) -->
    <style name="ThemeOverlay.PdfLabelPrinting.ToolbarPopup" parent="ThemeOverlay.Material3.Dark">
        <item name="textAppearanceLargePopupMenu">@style/TextAppearance.PdfLabelPrinting.PopupMenuItem</item>
        <item name="textAppearanceSmallPopupMenu">@style/TextAppearance.PdfLabelPrinting.PopupMenuItem</item>
        <item name="android:textAppearanceLargePopupMenu">@style/TextAppearance.PdfLabelPrinting.PopupMenuItem</item>
        <item name="android:textAppearanceSmallPopupMenu">@style/TextAppearance.PdfLabelPrinting.PopupMenuItem</item>

        <item name="android:textViewStyle">@style/Widget.PdfLabelPrinting.PopupMenu.TextView</item>
    </style>

    <!-- overflow button (menu icon color) -->
    <style name="PdfLabelPrintingOverflowButton" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@color/ic_custom_icon_color</item>
    </style>

    <!-- overflow menu (menu background color) -->
    <style name="PdfLabelPrintingOverflowMenu" parent="Widget.Material3.PopupMenu.Overflow">
        <item name="android:popupBackground">@drawable/menu_bg_overflow_popup</item>
    </style>

    <style name="TextAppearance.PdfLabelPrinting.ToolbarTitle.NoScale" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textSize">@dimen/dp_20</item>
        <item name="lineHeight">@dimen/dp_24</item>
    </style>

    <style name="Widget.PdfLabelPrinting.Toolbar" parent="Widget.Material3.Toolbar.Surface">
        <item name="android:backgroundTint">@color/app_background_color</item>
        <item name="android:backgroundTintMode">src_in</item>
        <item name="titleCentered">false</item>
        <item name="titleTextColor">@color/toolbar_title_text_color</item>
        <item name="subtitleTextColor">@color/toolbar_subtitle_text_color</item>
        <item name="navigationIconTint">@color/toolbar_navigation_icon_color</item>
        <item name="android:windowElevation">@dimen/dp_0</item>
        <item name="elevation">@dimen/dp_0</item>
        <item name="android:stateListAnimator">@null</item>

        <item name="popupTheme">@style/ThemeOverlay.PdfLabelPrinting.ToolbarPopup</item>
        <item name="titleTextAppearance">@style/TextAppearance.PdfLabelPrinting.ToolbarTitle.NoScale</item>
    </style>

    <!-- BUTTON -->
    <style name="TextAppearance.PdfLabelPrinting.Button.NoScale" parent="TextAppearance.Material3.LabelMedium">
        <item name="android:textSize">@dimen/dp_13</item>
        <item name="lineHeight">@dimen/dp_17</item>
    </style>

    <style name="Widget.PdfLabelPrinting.Button.Compact" parent="Widget.Material3.Button">
        <item name="android:minHeight">@dimen/dp_0</item>
        <item name="ensureMinTouchTargetSize">false</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingStart">@dimen/dp_4</item>
        <item name="android:paddingEnd">@dimen/dp_4</item>
        <item name="android:paddingTop">@dimen/dp_4</item>
        <item name="android:paddingBottom">@dimen/dp_4</item>
        <item name="iconPadding">@dimen/dp_0</item>
        <item name="cornerRadius">@dimen/dp_8</item>
        <item name="android:windowElevation">@dimen/dp_0</item>
        <item name="elevation">@dimen/dp_0</item>
        <item name="android:stateListAnimator">@null</item>

        <item name="android:textAppearance">@style/TextAppearance.PdfLabelPrinting.Button.NoScale</item>
    </style>

    <style name="Widget.PdfLabelPrinting.Button" parent="Widget.PdfLabelPrinting.Button.Compact">
        <item name="backgroundTint">@color/material_button_bg_color</item>
        <item name="android:textColor">@color/material_button_text_color</item>
        <item name="iconTint">@color/material_button_text_color</item>
        <item name="iconTintMode">src_in</item>
        <item name="rippleColor">@color/material_button_ripple_color</item>
        <item name="textAllCaps">false</item>
    </style>

    <!-- text button -->
    <style name="PdfLabelPrinting.TextButton" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">@color/material_textbutton_text_color</item>
        <item name="android:gravity">center</item>
        <item name="rippleColor">@color/material_textbutton_ripple_color</item>
        <item name="textAllCaps">false</item>
        <item name="cornerRadius">@dimen/dp_4</item>

        <item name="android:textAppearance">@style/TextAppearance.PdfLabelPrinting.Button.NoScale</item>
    </style>

    <!-- NORMAL TEXT -->
    <style name="TextAppearance.PdfLabelPrinting.Text.Normal" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textSize">@dimen/dp_13</item>
    </style>

    <style name="Widget.PdfLabelPrinting.TextView" parent="Widget.AppCompat.TextView">
        <item name="android:gravity">center</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/normal_text_color</item>

        <item name="android:textAppearance">@style/TextAppearance.PdfLabelPrinting.Text.Normal</item>
    </style>

    <!-- THUMB TEXT -->
    <style name="TextAppearance.PdfLabelPrinting.Text.Thumb" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textSize">@dimen/dp_11</item>
    </style>

    <style name="PdfLabelPrinting.TextView.Thumb" parent="Widget.AppCompat.TextView">
        <item name="android:gravity">center</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/thumb_text_color</item>

        <item name="android:textAppearance">@style/TextAppearance.PdfLabelPrinting.Text.Thumb</item>
    </style>

    <!-- NORMAL EDIT TEXT -->
    <style name="TextAppearance.PdfLabelPrinting.EditText.Normal" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textSize">@dimen/dp_17</item>
    </style>

    <style name="Widget.PdfLabelPrinting.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/edittext_text_color</item>
        <item name="android:textColorHint">@color/edittext_hint_text_color</item>
        <item name="android:backgroundTint">@color/edittext_bg_color</item>
        <item name="android:gravity">bottom|center_horizontal</item>
        <item name="android:includeFontPadding">false</item>

        <item name="android:textAppearance">@style/TextAppearance.PdfLabelPrinting.EditText.Normal</item>
    </style>

    <!-- FILENAME EDIT TEXT -->
    <style name="TextAppearance.PdfLabelPrinting.EditText.Filename" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textSize">@dimen/dp_12</item>
    </style>

    <style name="PdfLabelPrinting.EditText.Filename" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/edittext_text_color</item>
        <item name="android:textColorHint">@color/edittext_hint_text_color</item>
        <item name="android:backgroundTint">@color/edittext_bg_color</item>
        <item name="android:gravity">bottom|center_horizontal</item>
        <item name="android:includeFontPadding">false</item>

        <item name="android:textAppearance">@style/TextAppearance.PdfLabelPrinting.EditText.Filename</item>
    </style>

    <!-- RADIO BUTTON -->
    <style name="TextAppearance.PdfLabelPrinting.Radio.NoScale" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textSize">@dimen/dp_13</item>
    </style>

    <style name="Widget.PdfLabelPrinting.RadioButton" parent="Widget.Material3.CompoundButton.RadioButton">
        <item name="android:textColor">@color/radio_switch_text_color</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="buttonTint">@color/radio_button_bg_color</item>
        <item name="useMaterialThemeColors">false</item>
        <item name="android:windowElevation">@dimen/dp_0</item>
        <item name="elevation">@dimen/dp_0</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="rippleColor">@null</item>

        <item name="android:textAppearance">@style/TextAppearance.PdfLabelPrinting.Radio.NoScale</item>
    </style>

    <!-- CHECKBOX BUTTON -->
    <style name="TextAppearance.PdfLabelPrinting.Check.NoScale" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textSize">@dimen/dp_13</item>
    </style>

    <style name="Widget.PdfLabelPrinting.CheckBox" parent="Widget.Material3.CompoundButton.CheckBox">
        <item name="useMaterialThemeColors">false</item>
        <item name="android:button">@drawable/ic_checkbox</item>
        <item name="buttonTint">@color/ic_checkbox_custom_color</item>
        <item name="android:background">@null</item>
        <item name="android:windowElevation">@dimen/dp_0</item>
        <item name="elevation">@dimen/dp_0</item>
        <item name="android:stateListAnimator">@null</item>

        <item name="android:textAppearance">@style/TextAppearance.PdfLabelPrinting.Check.NoScale</item>
    </style>

    <!-- SWITCH BUTTON -->
    <style name="TextAppearance.PdfLabelPrinting.Switch.M2.NoScale" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textSize">@dimen/dp_13</item>
    </style>

    <style name="Widget.PdfLabelPrinting.Switch.M2" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="android:textColor">@color/radio_switch_text_color</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="useMaterialThemeColors">false</item>
        <item name="thumbTint">@color/switch_thumb_color</item>
        <item name="trackTint">@color/switch_track_color</item>
        <item name="android:windowElevation">@dimen/dp_0</item>
        <item name="elevation">@dimen/dp_0</item>
        <item name="android:stateListAnimator">@null</item>

        <item name="android:textAppearance">@style/TextAppearance.PdfLabelPrinting.Switch.M2.NoScale</item>
    </style>

    <!-- FLOATING ACTION BUTTON -->
    <style name="Widget.PdfLabelPrinting.Fab" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="android:textColor">@color/fab_button_text_color</item>
        <item name="android:backgroundTint">@color/fab_button_bg_color</item>
        <item name="rippleColor">@color/fab_button_ripple_color</item>
        <item name="tint">@color/fab_button_text_color</item>
        <item name="tintMode">src_in</item>
        <item name="android:windowElevation">@dimen/dp_0</item>
        <item name="elevation">@dimen/dp_0</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <!-- LIST -->
    <style name="TextAppearance.PdfLabelPrinting.ListItem" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textSize">@dimen/dp_14</item>
        <item name="android:textColor">@color/list_first_text_color</item>
    </style>

    <style name="TextAppearance.PdfLabelPrinting.ListItemSecondary" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textSize">@dimen/dp_12</item>
        <item name="android:textColor">@color/list_secondary_text_color</item>
    </style>

    <!-- PROGRESS BAR -->
    <style name="Widget.PdfLabelPrinting.CircularProgress" parent="Widget.Material3.CircularProgressIndicator">
        <item name="indicatorColor">@color/progress_indicator_color</item>
        <item name="trackColor">@color/progress_track_color</item>
    </style>

    <style name="Widget.PdfLabelPrinting.LinearProgress" parent="Widget.Material3.LinearProgressIndicator">
        <item name="indicatorColor">@color/progress_indicator_color</item>
        <item name="trackColor">@color/progress_track_color</item>
    </style>

    <!-- ALERT DIALOG/POPUP DIALOG -->
    <style name="ShapeAppearanceOverlay.PdfLabelPrinting.Dialog.Radius" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">@dimen/dp_12</item>
        <item name="cornerSizeTopRight">@dimen/dp_12</item>
        <item name="cornerSizeBottomLeft">@dimen/dp_12</item>
        <item name="cornerSizeBottomRight">@dimen/dp_12</item>
    </style>

    <style name="PdfLabelPrinting.Dialog.Background.Radius" parent="MaterialAlertDialog.Material3">
        <item name="backgroundTint">@color/alertdialog_background_color</item>
        <item name="backgroundInsetStart">@dimen/dp_16</item>
        <item name="backgroundInsetEnd">@dimen/dp_16</item>
        <item name="backgroundInsetTop">@dimen/dp_56</item>
        <item name="backgroundInsetBottom">@dimen/dp_56</item>

        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.PdfLabelPrinting.Dialog.Radius</item>
    </style>

    <style name="ThemeOverlay.PdfLabelPrinting.AlertDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="android:windowElevation">@dimen/dp_0</item>
        <item name="elevation">@dimen/dp_0</item>
        <item name="android:stateListAnimator">@null</item>

        <item name="alertDialogStyle">@style/PdfLabelPrinting.Dialog.Background.Radius</item>
    </style>

    <style name="SignaturePosition.PdfLabelPrinting.Dialog.Background.Radius" parent="PdfLabelPrinting.Dialog.Background.Radius">
        <item name="backgroundTint">@color/sign_position_bg_color</item>
    </style>

    <style name="SignaturePosition.PdfLabelPrinting.AlertDialog" parent="ThemeOverlay.PdfLabelPrinting.AlertDialog">
        <item name="alertDialogStyle">@style/SignaturePosition.PdfLabelPrinting.Dialog.Background.Radius</item>
    </style>
</resources>